{
    "name": "herosphp/app",
    "description": "a lightweight PHP development framework - herosphp Framework",
    "type": "project",
    "keywords": [
        "php framework",
        "herosphp",
        "lightweight"
    ],
    "homepage": "https://github.com/yangjian102621/herosphp",
    "license": "MIT",
    "authors": [
        {
            "name": "blackfox",
            "email": "yangjian102621@gmail.com"
        }
    ],
    "require": {
        "herosphp/framework": "*@dev",
        "herosphp/storage": "*@dev",
        "nikic/fast-route": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "app\\": "./app",
            "script\\": "script/"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.4"
    },
    "minimum-stability": "dev",
    "suggest": {
        "ext-event": "For better performance. "
    },
	"repositories": [
        {
            "type": "path",
            "url": "/php/herosphp"
       },

		{
			"type": "path",
			"url": "/php/herosphp-storage"
		}
    ],
    "scripts": {
        "post-install-cmd": "script\\Installer::install"
    }
}
